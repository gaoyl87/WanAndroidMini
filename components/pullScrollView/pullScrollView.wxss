.scrollContainer {
  width: 100%;
  height: 100%;
}
.scrollViewStyle{
  width: 100%;
  white-space:nowrap;
  height: 100%;
}

.headerContainer{
  width: 100%;
  position: relative;
  background: #EDECE8
}
.headerView{
  position: absolute;
  display: flex;
  bottom: 0px;
  height: 70px;
  width: 100%;
  flex-direction:row; 
  align-items: center;
  justify-content: center;
}
.headerIcon{
  width: 30px;
  height: 30px;
}
.rotateUp{
  transform: rotate(-180deg);
  transition: all 0.5s 
}
.rotateDown{
  transform: rotate(0deg);
  transition: all 0.5s 
}
.headerTitle{
  font-size: 35rpx;
  width: 200rpx;
  color: #515151;
  text-align: center;
  box-sizing: border-box;
}
.footerView{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.footerText{
  font-size: 30rpx;
  text-align: center;
  color:#515151;
}
.footerIcon{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
}
.emptyViewContainer{
  width: 100%;
  height: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.emptyIcon{
  margin-left: 50rpx;
  width: 300rpx;
  height: 300rpx;
}
.emptyText{
  font-size: 30rpx;
  color: #515151;
  margin-top: 30rpx;
}
